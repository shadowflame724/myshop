{% extends '@Admin/layout.html.twig' %}
{% block body%}
    <h3>Product photos</h3><br>
    <a href="{{ path("myshop.admin_editor_photo_add", {id:product.id}) }}">Add photo</a>
    <table>
        {% for photo in product.getPhotos() %}
            <tr>
                <td>{{ photo.getTitle() }}</td>
                <td>
                    <a href="/photos/{{ photo.getFileName() }}">
                        <img src="/photos/{{ photo.getSmallFileName() }}"/>
                    </a>
                </td>
                <td>
                    <a href="{{ path("myshop.admin_editor_photo_edit", {id:photo.id}) }}">Edit</a>
                    <a href="{{ path("myshop.admin_editor_photo_delete", {id:photo.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}